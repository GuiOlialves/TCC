    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
        document.addEventListener('DOMContentLoaded', () => {
            const consultasCtx = document.getElementById('consultasChart');
            if(consultasCtx) {
                new Chart(consultasCtx, {
                    type: 'bar',
                    data: {
                        labels: <%- JSON.stringify(relatorioTipoConsulta.map(r => r._id)) %>,
                        datasets: [{
                            label: 'Nº de Consultas',
                            data: <%- JSON.stringify(relatorioTipoConsulta.map(r => r.count)) %>,
                            backgroundColor: 'rgba(75, 192, 192, 0.7)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false }
                });
            }

            const especiesCtx = document.getElementById('especiesChart');
            if(especiesCtx) {
                new Chart(especiesCtx, {
                    type: 'doughnut',
                    data: {
                        labels: <%- JSON.stringify(relatorioEspecies.map(r => r._id)) %>,
                        datasets: [{
                            label: 'Quantidade de Pets',
                            data: <%- JSON.stringify(relatorioEspecies.map(r => r.count)) %>,
                            backgroundColor: ['rgba(255, 99, 132, 0.7)', 'rgba(54, 162, 235, 0.7)', 'rgba(255, 206, 86, 0.7)', 'rgba(153, 102, 255, 0.7)'],
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false }
                });
            }
        });
    </script>
    
